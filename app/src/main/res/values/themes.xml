<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplicationLogin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="Theme.MyApplicationLogin" parent="Base.Theme.MyApplicationLogin" />
    
    <style name="theme_normal">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>
    <style name="theme_normal_center">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">30dp</item>
    </style>
    <style name="theme_normal_center2">
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/libre_baskerville_bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="theme_title">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/black_ops_one_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="theme_buttom">
        <item name="android:fontFamily">@font/black_ops_one_regular</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="theme_login_icons">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    
    
</resources>